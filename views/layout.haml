!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=utf-8'}
    %meta{:name => 'description', :content => 'Draw!'}
    %title= 'Draw!'
    
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js', :type => 'text/javascript'}
    %script{:src => is_production? ? 'https://github.com/potomak/jquery-pixel/raw/master/jquery.pixel.js' : '/jquery.pixel.js', :type => 'text/javascript'}
    %script{:src => '/init.js', :type => 'text/javascript'}

    %link{:href => '/style.css', :media => 'all', :rel => 'stylesheet', :type => 'text/css'}
    
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2935139-17']);
      _gaq.push(['_trackPageview']);
    
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    #header
      %a{:href => "/"}
        %h1 DRAW!
      %a{:href => "http://twitter.com/share", :class => "twitter-share-button", 'data-url' => "http://draw.heroku.com", 'data-text' => "Have fun drawing!", 'data-count' => "horizontal", 'data-via' => "johnnyaboh"} Tweet
      %script{:type => "text/javascript", :src => "http://platform.twitter.com/widgets.js"}

      %p.flash
        = flash[:error]
      
      #auth
        - if logged_in?
          %a{:href => "/logout"}
            %img{:src => "/images/fb_logout_button.png"}
        - else
          %a{:href => "/auth/facebook"}
            %img{:src => "/images/fb_login_button.png"}
      
      - if logged_in?
        %h3= "Hello, #{@user['user_info']['first_name']}!"
    
    #container
      = yield
    
    #footer
      %a{:href => "/about"} About
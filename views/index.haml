#controls
  %a#clear Clear
  %a.action.active{ 'data-action' => 'pixel' } Draw
  %a.action{ 'data-action' => 'fill' } Fill
  - @colors.each do |color|
    %a.color{ 'data-color' => color }
      Set
      %span{ :style => "color: #{color}" }= color
  %a#upload Save image

#canvas
  %canvas{ :width => "320", :height => "320", :onSelectStart => "this.style.cursor='crosshair'; return false;" }

#images
  - @images.each do |image|
    .drawing
      %img{:src => is_production? ? image.url : "/images/#{image}"}
      %a{:href => "http://twitter.com/share", :class => "twitter-share-button", 'data-url' => is_production? ? image.url : "/images/#{image}", 'data-text' => "Check you this drawing!", 'data-count' => "vertical", 'data-via' => "johnnyaboh"} Tweet
      %script{:type => "text/javascript", :src => "http://platform.twitter.com/widgets.js"}
#desktop
  #controls
    #actions
      .action.pixel.active{ 'data-action' => 'pixel' }
      .action.fill{ 'data-action' => 'fill' }
    #colors
      - @colors.each do |color|
        .color{ 'data-color' => color, :class => "#{"active" if color == "#000000"}" }
          %div{ :style => "background-color: #{color}" }
    #clear

  #canvas
    %canvas{ :width => "320", :height => "320", :onSelectStart => "this.style.cursor='crosshair'; return false;" }

  %a#upload.disabled Save image

%h2 Gallery
#images
  - @drawings.each do |drawing|
    = haml :thumb, :layout => false, :locals => {:id => is_production? ? drawing.key : drawing, :drawing_url => is_production? ? drawing.url(:authenticated => false) : "/images/drawings/#{drawing}", :share_url => "http://draw.heroku.com/drawings/#{is_production? ? drawing.key : drawing}"}
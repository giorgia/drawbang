- content_for :head do
  :javascript
    var production_env = #{is_production?},
        maxFrames = #{MAX_FRAMES},
        currentPage = #{@current_page};

  %script{:src => '//raw.github.com/brianmario/jquery-infinite-scroll/master/jquery.infinitescroll.js', :type => 'text/javascript'}
  %script{:src => is_production? ? '//raw.github.com/potomak/drawbang/master/public/javascripts/pixel.min.js' : '/javascripts/pixel.js', :type => 'text/javascript'}
  %script{:src => '/javascripts/init.js', :type => 'text/javascript'}
  %script{:src => '/javascripts/pagination.js', :type => 'text/javascript'}

  %meta{:property => "og:title", :content => "Draw!"}
  %meta{:property => "og:type", :content => "website"}
  %meta{:property => "og:url", :content => "http://drawbang.com"}
  %meta{:property => "og:image", :content => "http://#{request.host_with_port}/images/draw.png"}
  %meta{:property => "og:site_name", :content => "Draw!"}
  %meta{:property => "og:description", :content => "Let's draw pixelart now!"}
  %meta{:property => "fb:app_id", :content => FACEBOOK['app_id']}
  
  %link{:rel => "alternate", :type => "application/rss+xml", :href => "http://#{request.host_with_port}/feed.rss", :title => "Draw! feed"}

.block
  = haml :'shared/editor'

.content_wrapper
  %h2 Gallery
  #images
    = haml :'drawings/gallery'
  %a{:id => "more", :href => "#"} More
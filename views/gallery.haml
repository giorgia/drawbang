- if @drawings.size > 0
  %p.sep
    %a{:href => "http://#{request.host}/?page=#{@current_page}"}
      = (PER_PAGE*(@current_page-1))+1
      \/
      = PER_PAGE*@current_page

  - @drawings.each_index do |i|
    .drawing_wrapper{:class => "#{"last" if 5 == i%6}"}
      = haml :thumb, :locals => @drawings[i]